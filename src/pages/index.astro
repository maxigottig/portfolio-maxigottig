---
import Layout from "../layouts/Layout.astro"

import AboutMe from "../components/AboutMe.astro"
import Briefcase from "../components/icons/Briefcase.astro"
import CodeIcon from "../components/icons/Code.astro"
import Experience from "../components/Experience.astro"
import Estudios from "../components/Estudios.astro"
import ProfileCheck from "../components/icons/ProfileCheck.astro"
import Projects from "../components/Projects.astro"
import Study from "../components/icons/Study.astro"
import SectionContainer from "../components/SectionContainer.astro"
import Hero from "../components/Hero.astro"
---

<Layout
  title="Porfolio de Maxi Gottig - Desarrollador Front-End Jr"
  description="Contrata a Maxi Gottig para crear tu sitio o aplicación web. Desarrollador Front-End Jr. Desarrolló proyectos con HTML, CSS, Javascript, React Js, Bootstrap, Astro y Wordpress."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="experiencia">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Briefcase class="size-8" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

</SectionContainer>
<div class="space-y-24">
<SectionContainer id="estudios">
  <h2
	class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
  >
	<Study class="size-8" />
	Estudios realizados
  </h2>
  <Estudios />
</SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
      >
        <ProfileCheck class="size-8" />
        Sobre mí
      </h2>
      <AboutMe />
    </SectionContainer>
  </div>
  </main>
</Layout>
