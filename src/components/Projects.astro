---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import HTML from "./icons/HTML.astro"
import CSS from "./icons/CSS.astro"
import Bootstrap from "./icons/Bootstrap.astro"
import Javascript from "./icons/Javascript.astro"
import Wordpress from "./icons/Wordpress.astro"
import React from "./icons/React.astro"
import Chatbot from "./icons/Chatbot.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  HTML: {
    name: "HTML",
    class: "bg-black text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-black text-white",
    icon: CSS,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-black text-white",
    icon: Bootstrap,
  },
  JAVASCRIPT: {
    name: "Javascript",
    class: "bg-black text-white",
    icon: Javascript,
  },
  WORDPRESS: {
    name: "Wordpress",
    class: "bg-black text-white",
    icon: Wordpress,
  },
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: React,
  },
  CHATBOT: {
    name: "Chatbot",
    class: "bg-black text-white",
    icon: Chatbot,
  },
}
const PROJECTS = [
  {
    title: "Mapicky",
    description:
      "Proyecto final del curso de Desarrollo Web en Coderhouse. Sitio Web Responsive. Se utilizó HTML, CSS, SCSS y Bootstrap",
    link: "https://mapicky.000webhostapp.com/index.html",
    github: "https://github.com/maxigottig/mapicky.git",
    image: "/projects/mapicky.jpg",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.BOOTSTRAP, ],
  },
  {
    title: "Calculadora de Plazo Fijo",
    description:
      "Proyecto final del curso de Javascript. Se armó una calculadora de Plazo Fijo dentro de un sitio Web.",
    link: "https://maxigottig.github.io/EntregaFinal/",
    github: "https://github.com/maxigottig/EntregaFinal.git",
    image: "/projects/calculadora.PNG",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT, ],
  },
  {
    title: "Ecommerce simil Motorola",
    description:
      "Proyecto final del curso de React Js. Simulación de un Ecommerce con productos de Motorola.",
    link: "https://simulacroecommercemoto.netlify.app/",  
    github: "https://github.com/maxigottig/EntregaFinalReact-Gottig.git",
    image: "/projects/ecommerce.png",
    tags: [TAGS.REACT],
  },
  {
    title: "Proyecto Confitería",
    description:
      "Proyecto de sitio web responsive para una confitería de fantasía. Se utilizó HTML, CSS y Bootstrap.",
    link: "https://maxigottig.github.io/proyecto-confiteria/index.html",
    github: "https://github.com/maxigottig/proyecto-confiteria.git",
    image: "/projects/confiteria.jpg",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.BOOTSTRAP, ],
  },
  {
    title: "Burbujas",
    description:
      "Proyecto de burbujas animadas como fondo para un sitio web. Realizado con CSS",
    link: "https://maxigottig.github.io/burbujas-css/",
    github: "https://github.com/maxigottig/burbujas-css.git",
    image: "/projects/burbujas.png",
    tags: [TAGS.CSS, ],
  },
  {
    title: "Chatbot",
    description:
      "Simulación de soporte técnico con Chatbot de ChatGPT integrado.",
    link: "https://maxigottig.github.io/Pagina-con-chatbot/",
    github: "https://github.com/maxigottig/Pagina-con-chatbot.git",
    image: "/projects/chatbot.png",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.CHATBOT, ],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



